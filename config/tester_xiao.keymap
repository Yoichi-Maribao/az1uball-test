#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/mouse-input.h>

/ {
    behaviors {
        sensor_mouse: sensor_mouse {
            compatible = "zmk,behavior-sensor-mouse-input";
            label = "SENSOR_MOUSE";
            #sensor-binding-cells = <1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <&none>;

            sensor-bindings = <
                &sensor_mouse X
                &sensor_mouse Y
            >;
        };
    };
};
